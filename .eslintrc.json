{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
		"jest": true
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": ["airbnb-base", "plugin:prettier/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
		"import/extensions": "off",
    "prettier/prettier": "error"
  },
	"settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".ts"]
      }
    }
  }

}
